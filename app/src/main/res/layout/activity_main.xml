<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encryption Algorithms"
        android:id="@+id/btnEnc"
        android:layout_marginTop="161dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primality Tests"
        android:id="@+id/btnPrimality"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/btnEnc"
        android:layout_alignStart="@+id/btnEnc"
        android:layout_alignEnd="@+id/btnEnc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Numbers"
        android:id="@+id/btnPRNG"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/btnPrimality"
        android:layout_alignStart="@+id/btnPrimality"
        android:layout_alignEnd="@+id/btnPrimality" />
</RelativeLayout>
